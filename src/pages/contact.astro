---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
---

<MainLayout title="Contact us" metaDescription="Contact us about questions and feedback about our BRØG app. We are ready to help you anytime!">
  <div class="min-h-screen flex flex-col items-center py-6 px-4 font-mont">
    
    <!-- Overskrift -->
    <h1 class="text-[40px] md:text-[60px] lg:text-[90px] font-bold text-blue-500 text-center mb-2">CONTACT US!</h1>
    <p class="text-blue-500 text-[15px] md:text-[20px] lg:text-[25px] text-center mb-8">Feel free to send us a message</p>

    <!-- Kontaktformular -->
    <div class="flex flex-col md:flex-row w-full max-w-[1200px] p-4 rounded-md space-y-6 md:space-y-0 md:gap-8 md:px-8">
      
      <!-- Formular -->
      <form class="w-full md:w-[60%]">
        
        <!-- Navn -->
        <label for="name" class="block text-gray-700 font-bold text-[15px] md:text-[18px] lg:text-[20px] mb-3">Name *</label>
        <input
          type="text"
          id="name"
          placeholder="Jane Doe"
          class="w-full border-4 border-blue-500 rounded-md p-3 mb-6"
        />

        <!-- Email -->
        <label for="email" class="block text-gray-700 font-bold text-[15px] md:text-[18px] lg:text-[20px] mb-3">Email *</label>
        <input
          type="email"
          id="email"
          placeholder="janedoe@gmail.com"
          class="w-full border-4 border-blue-500 rounded-md p-3 mb-6"
        />

        <!-- Besked -->
        <label for="message" class="block text-gray-700 font-bold text-[15px] md:text-[18px] lg:text-[20px] mb-3">Message *</label>
        <textarea
          id="message"
          placeholder="Write your message here"
          class="w-full border-4 border-blue-500 rounded-md p-3 h-[175px] mb-5"
        ></textarea>

        <!-- Placeholder for knappen -->
        <div class="w-full py-2 rounded-md">

          <a href="#" class="btn px-5 py-2 hover:scale-110 hover:bg-brown-600 transition-transform duration-300 ease-in-out rounded-lg text-cream-500 bg-brown-500 font-mont font-bold text-[13px] md:text-[23px] xl:text-[30px]" id="pop-up">Send</a>
        </div>
      </form>


      <div id="modal-window">
        <span class="modal-close">&#10006;</span>
        <div class="align-content">
           <div class="content">
              <h3 class="font-mont flex justify-center items-center text-blue-500 text-[40px] mb-5 mt-4"><b>Thank you!</b></h3>
              <p class="font-mont flex justify-center items-center mb-3">We will answer your message as fast as we can!</p>
              <p class="font-mont flex justify-center items-center mb-9 text-blue-500">BRØG</p>
           </div>
        </div>
     </div>


      <!-- Billede -->
      <div class="hidden md:block md:w-[40%]">
        <img 
          src="/broeg-kop2.png " 
          alt="Broeg logo"
          class="w-full max-w-[69%] h-auto mx-auto mt-4"
        />
      </div>

    </div>
  </div>
</MainLayout>


<style>
* {box-sizing: border-box; outline: none; }
.btn {
   display: inline-block;
}
#modal-window {
   position: fixed;
   top: 0;
   left: 0;
   width: 100%;
   height: 100%;
   z-index: 9999;
   background-color: rgba(0,0,0,.8);/* shaded background color */
   visibility: hidden;
   display: table;

}
#modal-window.active {
   visibility: visible;  
}
.modal-close {
   position: absolute;
   width: 100%;
   height: 100%;
   top: 0;
   display: block;
   font-size: 40px;
   line-height: 30px;
   color: #F9FAF5;
   text-align: right;
   padding: 20px;
   cursor: pointer;
   transition:.2s;
   -webkit-transition:.2s;
   transition-delay:.2s;
   -webkit-transition-delay:.2s;
   transform: translateY(-20px);
   -webkit-transform: translateY(-20px);
}
#modal-window.active .modal-close {
   transform: translateY(0px);
   -webkit-transform: translateY(0px);
}
.align-content {
   display: table-cell;
   vertical-align: middle;
}
#modal-window .content {
   position: relative;
   max-width: 450px; /*modal window max width */
   background-color: #F9FAF5;
   margin: 0 auto;
   padding: 10px 30px;
   /* visual effect */
   opacity: 0;
   transition: .2s;
   -webkit-transition: .2s;
   transform: translateY(20px);
   -webkit-transform: translateY(20px);
}
#modal-window.active .content {
   opacity: 1;
   transform: translateY(0px);
   -webkit-transform: translateY(0px);
}



</style>

<script>
document.addEventListener("DOMContentLoaded", () => {
    const popUpButton = document.getElementById("pop-up");
    const modalWindow = document.getElementById("modal-window");
    const modalClose = document.querySelector(".modal-close");

    // Show the modal when clicking the button
    popUpButton.addEventListener("click", (event) => {
      event.preventDefault(); // Prevent any default behavior (like navigation)
      modalWindow.classList.add("active");
    });

    // Close the modal when clicking the close button
    modalClose.addEventListener("click", () => {
      modalWindow.classList.remove("active");
    });

    // Optional: Close modal when clicking outside the content
    modalWindow.addEventListener("click", (event) => {
      if (event.target === modalWindow) {
        modalWindow.classList.remove("active");
      }
    });
  });
</script>





