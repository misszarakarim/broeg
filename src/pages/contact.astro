---
import MainLayout from "../layouts/MainLayout.astro";
---


<MainLayout title="Contact">
  <div class="min-h-screen flex flex-col items-center py-6 px-4 font-mont">
    
    <!-- Overskrift -->
    <h1 class="text-[40px] md:text-[60px] lg:text-[90px] font-bold text-blue-500 text-center mb-2">CONTACT US!</h1>
    <p class="text-blue-500 text-[15px] md:text-[20px] lg:text-[25px] text-center mb-8">Feel free to send us a message</p>

    <!-- Kontaktformular -->
    <div class="flex flex-col md:flex-row w-full max-w-[1200px] p-4 rounded-md space-y-6 md:space-y-0 md:gap-8 md:px-8">
      
      <!-- Formular -->
      <form class="w-full md:w-[60%]">
        
        <!-- Navn -->
        <label for="name" class="block text-gray-700 font-bold text-[15px] md:text-[18px] lg:text-[20px] mb-3">Name *</label>
        <input
          type="text"
          id="name"
          placeholder="Jane Doe"
          class="w-full border-4 border-blue-500 rounded-md p-3 mb-6"
        />

        <!-- Email -->
        <label for="email" class="block text-gray-700 font-bold text-[15px] md:text-[18px] lg:text-[20px] mb-3">Email *</label>
        <input
          type="email"
          id="email"
          placeholder="janedoe@gmail.com"
          class="w-full border-4 border-blue-500 rounded-md p-3 mb-6"
        />

        <!-- Besked -->
        <label for="message" class="block text-gray-700 font-bold text-[15px] md:text-[18px] lg:text-[20px] mb-3">Message *</label>
        <textarea
          id="message"
          placeholder="Write your message here"
          class="w-full border-4 border-blue-500 rounded-md p-3 h-[175px] mb-5"
        ></textarea>

        <!-- Placeholder for knappen -->
        <div class="w-full bg-gray-300 text-center py-2 rounded-md">
          [Button Placeholder]
        </div>
      </form>

      <!-- Billede -->
      <div class="hidden md:block md:w-[40%]">
        <img 
          src="/broeg-kop2.png " 
          alt="Broeg logo"
          class="w-full max-w-[69%] h-auto mx-auto mt-4"
        />
      </div>

    </div>
  </div>
</MainLayout>








