---
import Button from "./Button.astro";
---

<section class="pt-10">
  <div class="mx-auto grid grid-cols-1 md:grid-cols-2 gap-6 items-center font-mont border-t-4 border-blue-500 ">

    <!-- Billede -->
    <div class="flex justify-center items-center px-6 sm:px-8 md:px-10 lg:px-16 py-6 sm:py-8 border-b-4 md:border-b-0 md:border-r-4 border-blue-500">
      <img 
        src="/maps.png" 
        alt="BRØG cup" 
        class="w-full max-w-[350px] sm:max-w-[355px] md:max-w-[350px] lg:max-w-[400px] xl:max-w-[450px] object-contain py-10"/>
    </div>

    <!-- Tekst -->
    <div class="relative leading-normal px-4 sm:px-8 md:px-10 text-[15px] lg:px-[2rem] xl:text-[24px] 
       md:border-blue-500 md:h-full text-center md:text-left"> <!-- Tilpasset leading -->
      
      <h1 class="text-[22px] sm:text-[28px] md:text-[40px] lg:text-[61px] text-blue-500 font-bold pt-10">
        <span class="block md:inline">GOOD COFFEE</span>
        <span class="block md:inline">EASY TO FIND</span>
      </h1>


      <div class="flex flex-col items-center justify-center md:mt-16">
      <p class="mt-2 sm:mt-3 lg:mt-4 mb-5">
        Explore the map in the BRØG app
      </p>
      


      <a href="https://apps.apple.com/dk/app/br%C3%B8g/id6504421770?l=da" class="mb-9">
        <Button variant="secondary" ariaLabel="Go to appstore">
          <img class="h-5 w-5 md:h-6 md:w-6 xl:h-7 lg:w-7 flex justify-center items-center pl-1" src="/arrow.png" alt="">
        </Button>
    </a>  

    </div>

  </div>
</section>

